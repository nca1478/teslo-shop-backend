# Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values

# Database
DATABASE_URL="postgresql://postgres:STRONG_PASSWORD_HERE@localhost:5432/teslo_shop?schema=public"
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE

# JWT
JWT_SECRET=VERY_STRONG_JWT_SECRET_HERE_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=24h

# App
PORT=3002
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api-m.paypal.com

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here